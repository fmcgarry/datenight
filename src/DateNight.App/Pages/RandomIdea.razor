@page "/ideas/random"

@if (_isFirstLoad)
{
    <div class="h-100 d-flex justify-content-center align-items-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="d-flex flex-column h-100">
        @if (_idea is null)
        {
            <div class="d-flex justify-content-center mt-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center mt-5">
                <IdeaComponent Idea="_idea" OnDeleteCallback="OnDeletedIdea" />
            </div>
        }
        <div class="flex-grow-1" />
        <div class="container align-self-end mb-5">
            <div class="row align-items-center">
                <div class="col d-flex justify-content-center">
                    <button class="btn btn-success" style="height:90px; width:90px; border-radius:100%" @onclick="SelectIdea">
                        <span class="fa-solid fa-check fa-3x" title="fa-check" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="col d-flex justify-content-center">
                    <button class="btn btn-danger" style="height:90px; width:90px; border-radius:100%" @onclick="GetRandomIdea">
                        <span class="fa-solid fa-xmark fa-3x" title="fa-xmark"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}