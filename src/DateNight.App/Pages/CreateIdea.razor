@page "/ideas/create"

<h3>Create Idea</h3>

<EditForm Model="@_idea" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="mb-3">
        <InputText class="form-control" id="title" @bind-Value="_idea.Title" placeholder="Title"/>
    </div>
    <div class="mb-3">
        <InputTextArea style="min-height: 10rem;" id="description" class="form-control" @bind-Value="_idea.Description" placeholder="Description"/>
    </div>
    <button class="btn btn-primary w-100" type="submit">Submit</button>
</EditForm>