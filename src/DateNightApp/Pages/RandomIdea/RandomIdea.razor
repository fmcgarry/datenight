@page "/ideas/random"
@using DateNightApp.Components.IdeaComponent

@if (_isFirstLoad)
{
    <div class="h-100 d-flex justify-content-center align-items-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    if (_isIdeaCollectionEmpty)
    {
        <div class="d-flex h-100 flex-column">
            <div class="row flex-grow-1 align-items-center justify-content-center text-center">
                <div class="col">
                    <span style="color: Black;">
                        <i class="fa-regular fa-face-frown fa-6x mb-4"></i>
                    </span>
                    <p>Uh oh, it looks like you're out of ideas.</p>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col">
                    <button class="btn btn-primary w-100" @onclick=OnCreateMoreClick>Create more</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex flex-column h-100">
            @if (_idea is null)
            {
                <div class="d-flex justify-content-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-center mt-5">
                    <IdeaComponent Idea="_idea" OnDeleteCallback="OnDeletedIdea" />
                </div>
            }
            <div class="flex-grow-1" />
            <div class="container align-self-end mb-5">
                <div class="row align-items-center">
                    <div class="col d-flex justify-content-center">
                        <button class="btn btn-success" style="height:90px; width:90px; border-radius:100%" @onclick="SelectIdea">
                            <span class="fa-solid fa-check fa-3x" title="fa-check" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <button class="btn btn-danger" style="height:90px; width:90px; border-radius:100%" @onclick="GetRandomIdea">
                            <span class="fa-solid fa-xmark fa-3x" title="fa-xmark"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}